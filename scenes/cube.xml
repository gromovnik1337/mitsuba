<?xml version="1.0" ?>
<scene version="0.6.0">
	<sensor type="thinlens">
		<transform name="toWorld">
			<lookat origin="0, 0, 0" target="0, 0, 1" up="0, -1, 0"/>
		</transform>
        <float name="fov" value="54"/>
        <string name="fovAxis" value="y"/>
        <float name="pixelAspect" value="2.0"/>
		<float name="focusDistance" value="1"/>
		<float name="apertureRadius" value="0.01"/>

		<sampler type="ldsampler">
		    <integer name="sampleCount" value="32"/>
		</sampler>

		<film type="ldrfilm">
		    <integer name="width" value="800"/>
		    <integer name="height" value="600"/>
            <integer name="cropOffsetX" value="0"/>
            <integer name="cropOffsetY" value="0"/>
            <integer name="cropWidth" value="800"/>
            <integer name="cropHeight" value="600"/>
            <boolean name="banner" value="false"/>
		</film>
	</sensor>

    <shape type="cube">
        <transform name="toWorld">
            <scale value="0.5"/>
            <rotate y="-1" angle="0"/>
            <translate x="0" y="0" z="1.5"/>
        </transform>
    </shape>
</scene>
